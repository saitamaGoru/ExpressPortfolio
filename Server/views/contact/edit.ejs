<%- include ('../partials/header.ejs')  %>

<%- include ('../partials/main_nav.ejs')  %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">

            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                <label for="ContactNameTextField">Full Name</label>
                <input type="text" class="form-control" id="ContactNameTextField" placeholder="Edit the name"
                name="name"
                value = "<%= contact.name %>" required>
            </div>

            <div class="form-group">
                <label for="ContactNumberTextField">Number</label>
                <input type="number" class="form-control" id="ContactNumberTextField" placeholder="Edit your number"
                name="number"
                value = "<%= contact.number %>" required>
            </div>

            <div class="form-group">
                <label for="ContactEmailAddressTextField">Email Address</label>
                <input type="text" class="form-control" id="ContactEmailAddressTextField" placeholder="Edit the email"
                name="email"
                value = "<%= contact.email %>" required>
            </div>
            <button Type="submit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit</button>
                <button Type="submit" class="btn btn-danger">
                    <i class="fas fa-edit"></i> Cancel</button>
            </form>


        </div>
    </div>
</div>









<%- include ('../partials/bottom_nav.ejs')  %>
   
